{
  "name": "regle",
  "version": "1.9.7",
  "private": true,
  "description": "Headless model-based form validation library for Vue.js",
  "scripts": {
    "prepare": "FORCE_COLOR=1 turbo run turbo:postinstall",
    "turbo:postinstall": "corepack install && husky",
    "release": "pnpm run test && pnpm run typecheck && bumpp -r && git push --follow-tags",
    "npm:publish": "zx ./scripts/publish.mjs",
    "typecheck": "turbo run typecheck",
    "build": "turbo build --filter='@regle/*' --filter='!@regle/shared'",
    "build:sourcemaps": "turbo build:sourcemaps --filter='@regle/*' --filter='!@regle/shared'",
    "dev": "turbo run dev --filter='@regle/*'",
    "run:vitest:vue-3.5": "vitest",
    "run:vitest:vue-3.4": "env-cmd -e 'vue-3.4' -- vitest",
    "unit-tests:run": "pnpm run run:vitest:vue-3.5 run && pnpm run run:vitest:vue-3.4 run",
    "test": "pnpm run build && pnpm run lint && pnpm run typecheck && pnpm run unit-tests:run && pnpm run test:dts && pnpm run ui-tests:run",
    "test:coverage": "pnpm run build:sourcemaps && vitest run --coverage",
    "test:dev": "pnpm run run:vitest:vue-3.5",
    "test:dts": "vue-tsc --noEmit --project ./tests/tsconfig.json && pnpm run --filter='ui-vue3' typecheck",
    "ui-tests:server": "pnpm run -r --filter='ui-vue3' dev",
    "ui-tests:run": "playwright test",
    "ui-tests:test": "playwright test --reporter=junit",
    "docs:dev": "turbo run dev --filter='docs'",
    "docs:build": "turbo run build --filter='docs'",
    "docs:preview": "turbo run preview --filter='docs'",
    "repl:dev": "turbo run dev --filter='regle-playground'",
    "repl:build": "turbo run build --filter='regle-playground'",
    "play:vue3": "cd playground/vue3 && pnpm run dev",
    "play:nuxt": "cd playground/nuxt && pnpm run dev",
    "deps:upgrade": "taze --include-locked -I -r",
    "commitlint": "commitlint --edit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:staged": "oxlint --fix",
    "format:staged": "prettier '**/*.{js,ts,vue,json,jsonc}' --write --ignore-unknown --config ./prettier.config.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@nuxt/kit": "4.1.3",
    "@nuxt/schema": "4.1.3",
    "@pinia/testing": "1.0.2",
    "@playwright/test": "1.56.0",
    "@types/node": "catalog:",
    "@types/semver": "7.7.1",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/test-utils": "2.4.6",
    "bumpp": "10.3.1",
    "changelogithub": "13.16.0",
    "corepack": "0.34.0",
    "env-cmd": "11.0.0",
    "happy-dom": "20.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.4",
    "nuxt": "catalog:",
    "oxlint": "1.22.0",
    "pinia-2.2.5": "catalog:",
    "playwright": "1.56.0",
    "playwright-core": "1.56.0",
    "prettier": "catalog:",
    "semver": "7.7.3",
    "std-env": "3.9.0",
    "taze": "19.7.0",
    "tsdown": "catalog:",
    "tsx": "4.20.6",
    "turbo": "2.5.8",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-3.4": "catalog:",
    "vue-tsc": "catalog:",
    "zx": "8.8.4"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "homepage": "https://reglejs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "engines": {
    "node": ">=22 < 23",
    "pnpm": ">=10.14.0"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.18.2",
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^22.14.0",
      "onFail": "download"
    }
  }
}
