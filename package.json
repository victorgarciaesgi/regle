{
  "name": "regle",
  "version": "1.19.16",
  "private": true,
  "description": "Headless model-based form validation library for Vue.js",
  "scripts": {
    "prepare": "FORCE_COLOR=1 turbo run turbo:postinstall",
    "turbo:postinstall": "corepack install && husky",
    "release": "pnpm install && pnpm test && pnpm typecheck && bumpp -r && git push --follow-tags",
    "npm:publish": "zx ./scripts/publish.mjs",
    "typecheck": "turbo run typecheck",
    "build": "turbo build --filter='@regle/*' --filter='!@regle/shared'",
    "build:sourcemaps": "turbo build:sourcemaps --filter='@regle/*' --filter='!@regle/shared'",
    "dev": "turbo run dev --filter='@regle/*' --filter='!@regle/mcp-server'",
    "run:vitest:vue-3.5": "vitest",
    "run:vitest:vue-3.4": "env-cmd -e 'vue-3.4' -- vitest",
    "unit-tests:run": "pnpm run:vitest:vue-3.5 run && pnpm run:vitest:vue-3.4 run",
    "test": "pnpm build && pnpm lint && pnpm format:check && pnpm typecheck && pnpm unit-tests:run && pnpm test:typecheck && pnpm ui-tests:run",
    "test:coverage": "pnpm build:sourcemaps && TEST_TRACE=true vitest run --coverage",
    "test:dev": "TEST_TRACE=true pnpm run:vitest:vue-3.5",
    "test:typecheck:vue": "vue-tsc --noEmit --project ./tests/tsconfig.vue.json",
    "test:typecheck:ts": "tsgo --noEmit --project ./tests/tsconfig.json && tsgo --noEmit --project ./tests/plugin-config-tests/tsconfig.json",
    "test:typecheck": "pnpm test:typecheck:vue && pnpm test:typecheck:ts && pnpm --filter='ui-vue3' typecheck",
    "ui-tests:server": "pnpm -r --filter='ui-vue3' dev",
    "ui-tests:run": "turbo run playwright:ci",
    "ui-tests:test": "playwright test --reporter=junit",
    "playwright:ci": "playwright test",
    "docs:dev": "turbo run dev --filter='docs'",
    "docs:build": "turbo run build --filter='docs'",
    "docs:preview": "turbo run preview --filter='docs'",
    "repl:dev": "turbo run dev --filter='regle-playground'",
    "repl:build": "turbo run build --filter='regle-playground'",
    "play:vue3": "cd playground/vue3 && pnpm dev",
    "play:nuxt": "cd playground/nuxt && pnpm dev",
    "deps:upgrade": "taze",
    "commitlint": "commitlint --edit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:github": "oxlint --format=github",
    "lint:staged": "oxlint --fix",
    "format:check": "oxfmt --check",
    "format:staged": "oxfmt"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@commitlint/types": "20.4.0",
    "@nuxt/kit": "catalog:",
    "@nuxt/schema": "catalog:",
    "@pinia/testing": "1.0.3",
    "@playwright/test": "1.58.2",
    "@types/node": "catalog:",
    "@types/semver": "7.7.1",
    "@typescript/native-preview": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vitest/coverage-istanbul": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vue/test-utils": "2.4.6",
    "bumpp": "10.4.1",
    "changelogithub": "14.0.0",
    "corepack": "0.34.6",
    "env-cmd": "11.0.0",
    "happy-dom": "20.7.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "nuxt": "catalog:",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "pinia-2.2.5": "catalog:",
    "playwright": "catalog:",
    "playwright-core": "catalog:",
    "rolldown": "1.0.0-rc.5",
    "semver": "7.7.4",
    "std-env": "3.10.0",
    "taze": "19.9.2",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "turbo": "2.8.10",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue-3.4": "catalog:",
    "vue-tsc": "catalog:",
    "zx": "8.8.5"
  },
  "homepage": "https://reglejs.dev/",
  "license": "MIT",
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "~24",
      "onFail": "download"
    }
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.14.0"
  },
  "packageManager": "pnpm@10.30.1"
}
