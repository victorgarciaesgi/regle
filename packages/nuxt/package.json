{
  "name": "@regle/nuxt",
  "version": "1.18.2-beta.1",
  "description": "Regle nuxt module",
  "homepage": "https://reglejs.dev/",
  "license": "MIT",
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/module.mjs",
  "types": "./dist/types.d.mts",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    },
    "./setup": {
      "types": "./dist/runtime/defineRegleNuxtPlugin.d.ts",
      "import": "./dist/runtime/defineRegleNuxtPlugin.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "turbo:postinstall": "pnpm exec playwright install",
    "prepack": "nuxt-module-build build",
    "dev": "nuxt-module-build build --stub",
    "dev:playground": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "typecheck": "pnpm dev:prepare && vue-tsc --noEmit && nuxi typecheck test/fixtures",
    "cleanup": "nuxi cleanup && nuxi cleanup playground && nuxi cleanup test/fixtures",
    "build": "pnpm run cleanup && nuxt-module-build prepare && nuxt-module-build build",
    "build:sourcemaps": "pnpm run cleanup && nuxt-module-build prepare && nuxt-module-build build",
    "dev:prepare": "nuxt-module-build build && nuxt-module-build prepare && nuxi prepare playground && nuxi prepare test/fixtures",
    "playwright": "playwright test --ui --headed",
    "playwright:ci": "playwright test",
    "test": "playwright test"
  },
  "dependencies": {
    "@nuxt/kit": "catalog:",
    "@nuxt/schema": "catalog:",
    "@regle/core": "workspace:*",
    "@regle/rules": "workspace:*"
  },
  "devDependencies": {
    "@nuxt/module-builder": "1.0.2",
    "@nuxt/test-utils": "3.23.0",
    "@playwright/test": "catalog:",
    "@types/node": "catalog:",
    "nuxt": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "unbuild": "3.6.1",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "optionalDependencies": {
    "@regle/schemas": "workspace:*"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
