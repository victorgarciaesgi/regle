{
  "name": "@regle/core",
  "version": "0.6.1",
  "description": "Type safe form validation library for Vue 3",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "build:dev": "tsup --config=tsup.dev.ts",
    "build:sourcemaps": "tsup --config=tsup.sourcemap.ts",
    "dev": "tsup --config=tsup.dev.ts --watch",
    "test": "echo 'no tests'"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.10.5",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "@vue/test-utils": "2.4.6",
    "bumpp": "9.10.0",
    "changelogithub": "0.13.11",
    "cross-env": "7.0.3",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "expect-type": "1.1.0",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "type-fest": "4.32.0",
    "typescript": "catalog:",
    "vitest": "2.1.8",
    "vue": "catalog:",
    "vue-eslint-parser": "catalog:",
    "vue-tsc": "catalog:"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/regle-core.d.ts",
      "node": {
        "import": {
          "production": "./dist/regle-core.min.mjs",
          "development": "./dist/regle-core.mjs",
          "default": "./dist/regle-core.mjs"
        },
        "require": {
          "production": "./dist/regle-core.min.cjs",
          "development": "./dist/regle-core.cjs",
          "default": "./index.js"
        }
      },
      "import": "./dist/regle-core.mjs",
      "require": "./index.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "main": "index.js",
  "module": "./dist/regle-core.mjs",
  "types": "./dist/regle-core.d.ts",
  "files": [
    "dist",
    "index.js",
    "index.cjs",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://reglejs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "keywords": [
    "regle",
    "vue forms",
    "vue validation library",
    "vue forms typescript",
    "vue model validation",
    "vue zod",
    "vue typescript forms",
    "regle",
    "reglejs",
    "regle vue",
    "regle vue forms",
    "regle vue form"
  ],
  "license": "MIT"
}