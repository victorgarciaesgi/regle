{
  "name": "@regle/schemas",
  "version": "1.1.0-beta.1",
  "description": "Schemas adapter for Regle",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "build:dev": "tsup --config=tsup.dev.ts",
    "build:sourcemaps": "tsup --config=tsup.sourcemap.ts",
    "dev": "tsup --config=tsup.dev.ts --watch",
    "test": "echo 'no tests'"
  },
  "dependencies": {
    "@regle/core": "workspace:*",
    "@regle/rules": "workspace:*",
    "@standard-schema/spec": "1.0.0"
  },
  "peerDependencies": {
    "valibot": "^1.0.0-beta.11",
    "zod": "^3.24.0"
  },
  "peerDependenciesMeta": {
    "valibot": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.13.13",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "8.28.0",
    "@vue/test-utils": "2.4.6",
    "bumpp": "10.1.0",
    "changelogithub": "13.13.0",
    "cross-env": "7.0.3",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "valibot": "1.0.0",
    "vitest": "3.0.9",
    "vue": "catalog:",
    "vue-eslint-parser": "catalog:",
    "vue-tsc": "catalog:",
    "zod": "3.24.2"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/regle-schemas.d.ts",
      "node": {
        "import": {
          "production": "./dist/regle-schemas.min.mjs",
          "development": "./dist/regle-schemas.mjs",
          "default": "./dist/regle-schemas.mjs"
        },
        "require": {
          "production": "./dist/regle-schemas.min.cjs",
          "development": "./dist/regle-schemas.cjs",
          "default": "./index.js"
        }
      },
      "import": "./dist/regle-schemas.mjs",
      "require": "./index.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "main": "index.js",
  "module": "./dist/regle-schemas.mjs",
  "types": "./dist/regle-schemas.d.ts",
  "files": [
    "dist",
    "index.js",
    "index.cjs",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "homepage": "https://reglejs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "license": "MIT"
}