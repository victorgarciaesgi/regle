{
  "name": "@regle/schemas",
  "version": "1.8.3",
  "description": "Schemas adapter for Regle",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsdown",
    "build:sourcemaps": "tsdown --config=tsdown.sourcemap.ts",
    "dev": "tsdown --config=tsdown.dev.ts --watch",
    "test": "echo 'no tests'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@regle/core": "workspace:*",
    "@regle/rules": "workspace:*",
    "@standard-schema/spec": "1.0.0"
  },
  "peerDependencies": {
    "valibot": "^1.0.0",
    "zod": "^3.24.0 || ^4.0.0",
    "arktype": "^2.1.0"
  },
  "peerDependenciesMeta": {
    "valibot": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "arktype": {
      "optional": true
    }
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "catalog:",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vue/test-utils": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-vue": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "valibot": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-eslint-parser": "catalog:",
    "vue-tsc": "catalog:",
    "zod": "catalog:"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/regle-schemas.d.ts",
      "node": {
        "import": {
          "production": "./dist/regle-schemas.min.js",
          "development": "./dist/regle-schemas.js",
          "default": "./dist/regle-schemas.js"
        }
      },
      "import": "./dist/regle-schemas.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "main": "./dist/regle-schemas.js",
  "module": "./dist/regle-schemas.js",
  "types": "./dist/regle-schemas.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Victor Garcia",
    "url": "https://github.com/victorgarciaesgi"
  },
  "homepage": "https://reglejs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorgarciaesgi/regle.git"
  },
  "license": "MIT"
}
