    "dev": "tsdown --config=tsdown.dev.ts --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "@regle/core": "workspace:*",
    "type-fest": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vue/reactivity": "catalog:",
    "@vue/test-utils": "catalog:",
    "tsdown": "catalog:",
